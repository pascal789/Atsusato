<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-4'>
      <h2>ユーザーページ</h2>
      <table class='table'>
        <tr><%= image_tag @user.get_profile_image, size:'100x100' %></tr>
        <tr>
      	  <th>ユーザー名</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>紹介文</th>
      	  <th><%= @user.introduction %></th>
        </tr>
        <tr>
          <th>フォロー数</th>
          <th><%= @user.followings.count %></th>
        </tr>
        <tr>
          <th>フォロワー数</th>
          <th><%= @user.followers.count %></th>
        </tr>
      </table>
    </div>
    <div class='col-md-8'>
      <h3>ユーザーの投稿</h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.genre.name %></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
          <tr>
            <td>
              <%= link_to "強制退会", admin_user_path(@user), class: "btn btn-danger ml-5" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>