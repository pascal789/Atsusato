<div class="main-container">
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-12 '>
        <h2>投稿一覧</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>タイトル</th>
              <th>ユーザー</th>
              <th>ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to book.title, admin_book_path(book.id) %></td>
                <td><%= book.user.name %></td>
                <td><%= book.genre.name %></td>
              </tr>
            <% end %>
            <%= paginate @books %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>