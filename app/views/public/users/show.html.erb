<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-4'>
      <h2>ユーザーページ</h2>
      <table class='table'>
        <tr><%#= image_tag @user.get_profile_image, size:'100x100' %></tr>
        <tr>
      	  <th>ユーザー名</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>紹介文</th>
      	  <th><%= @user.introduction %></th>
        </tr>
        <tr>
          <th>フォロー数</th>
          <th><%= link_to @user.followings.count, public_user_followings_path(@user) %></th>
        </tr>
        <tr>
          <th>フォロワー数</th>
          <th><%= link_to @user.followers.count, public_user_followers_path(@user) %></th>
        </tr>
        <tr>
          <th>
            <% if current_user != @user %>
              <td><%#= render "public/relationships/btn", @user: user %></td>
            <% else %>
              <%= link_to edit_public_user_path(@user), class: "btn btn-outline-secondary btn-block edit_user_#{@user.id}" do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            <% end %>
          </th>
        </tr>
      </table>
    </div>
    <div class='col-md-8'>
      <h3>ユーザーの投稿</h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.title, public_book_path(book.id) %></td>
              <td><%= book.genre.name %></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
