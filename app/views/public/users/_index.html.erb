<table class='table'>
  <thead>
    <tr>
      <th>画像</th>
      <th>ユーザー名</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <% if user.profile_image.attached? %>
            <%= image_tag user.get_profile_image, size: '50x50' %>
          <% else %>
            <%= image_tag 'no_image', size: '50x50' %>
          <% end %>
        </td>
        <td><%= link_to user.name , public_user_path(user.id), class: "user_#{user.id}" %></td>
        <td><%= render "public/relationships/btn", user: user %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate users %>