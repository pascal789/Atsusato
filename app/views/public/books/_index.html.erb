<table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>ユーザー</th>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% books.each do |book| %>
            <tr>
              <td></td>
              <td><%= book.user.name %></td>
              <td><%= link_to book.title, public_book_path(book.id) %></td>
              <td><%= book.genre.name %></td>
              <td class=<%= "favorite-" + book.id.to_s %> >
                <% if book.favorited_by?(current_user) %>
                  <%= link_to public_book_favorites_path(book), method: :delete do %>
                    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                    <%= book.favorites.count %> いいね
                  <% end %>
                <% else %>
                  <%= link_to public_book_favorites_path(book), method: :post do %>
                    <i class="fas fa-heart" aria-hidden="true"></i>
                    <%= book.favorites.count %> いいね
                  <% end %>
                <% end %>
              </td>
              <td><%#= render "book_comments/counter", book: book %></td>
            </tr>
          <% end %>
        </tbody>
      </table>