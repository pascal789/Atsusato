<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>ユーザー</th>
      <th>ジャンル</th>
      <th>いいね！</th>
      <th>コメント数</th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to book.title, public_book_path(book.id) %></td>
        <td><%= book.user.name %></td>
        <td><%= book.genre.name %></td>
        <td class=<%= "favorite-" + book.id.to_s %> >
          <%= render "public/favorites/btn", book: book %>
        </td>
        <td><%= render "public/book_comments/counter", book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>
