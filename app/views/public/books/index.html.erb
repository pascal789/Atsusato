<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 '>
      <h2>投稿一覧</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>ユーザー</th>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td></td>
              <td><%= book.user.name %></td>
              <td><%= book.title %></td>
              <td><%= book.genre.name %></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
