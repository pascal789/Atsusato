<div class='container'>
  <div class='row'>
    <div class='col-md-6'>
      <h2>レビュー投稿</h2>
      <%= form_with model:@book,url: public_books_path do |f| %>
        <div class="form-group">
          <h4>タイトル</h4>
          <%= f.text_field :title, class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <h4>ジャンル</h4>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
        </div>
        <div class="form-group">
          <h4>本文</h4>
          <%= f.text_area :introduction, class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>