<div class='container'>
  <div class='row'>
    <div class='col-lg-5'>
  		<h2>漫画詳細</h2>
      <table class='table'>
        <tr>
          <th>タイトル</th>
          <td><%= @book.title %></td>
        </tr>
        <tr>
          <th>ユーザー</th>
          <td><%= @book.user.name %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @book.genre.name %></td>
        </tr>
        <tr>
          <th>コメント数</th>
          <td><%= @book.book_comments.count %></td>
        </tr>
        <tr>
          <th>レビュー</th>
          <td><%= @book.introduction %></td>
        </tr>
        <tr>
          <% if @book.user == current_user %>
            <td><%= link_to 'Destroy', public_book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}" %></td>
          <% else %>
            <th>いいね数</th>
            <td class=<%= "favorite-" + @book.id.to_s %> >
              <%= render "public/favorites/btn", book: @book %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
    <div class='col-lg-7'>
      <h2>コメント欄</h2>
      <div class="book-comments-index">
        <div class='row'>
          <%= render "public/book_comments/form", book: @book, book_comment: @book_comment %>
        </div>
        <table class='table table-hover table-inverse'>
          <div class='row'>
            <%= render "public/book_comments/index", book_comments: @book_comments %>
          </div>
        </table>
      </div>
    </div>
  </div>
</div>