<thead>
  <tr>
    <th>ユーザー</th>
    <th>コメント</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% book_comments.each do |book_comment| %>
  <tr>
    <td><%= book_comment.user.name %></td>
    <td><%= book_comment.comment %></td>
    <td>
      <% if book_comment.user == current_user %>
        <%= link_to "Destroy", public_book_book_comment_path(book_comment), method: :delete, class: "btn btn-danger pull-right" %>
      <% end %>
    </td>
  </tr>
  <% end %>
</tbody>