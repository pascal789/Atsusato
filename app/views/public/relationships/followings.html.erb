<h2>Follow Users</h2>
<% if @users.exists? %>
<table class='table'>
  <thead>
    <tr>
      <th>画像</th>
      <th>ユーザー名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%#= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= link_to user.name , public_user_path(user.id), class: "user_#{user.id}" %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>