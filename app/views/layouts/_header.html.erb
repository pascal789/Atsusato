<header class="bg-info">
  <nav class="navbar navbar-expand-lg border-bottom" style="background-color:#1e90ff">
    <div class="container">
      <div class="mr-5 border rounded p-2 bg-warning">
        <% if admin_signed_in? %>
          <%= link_to "集まれ漫画の里!!", admin_users_path, class:"header-title navbar-brand text-white"%>
        <% else %>
          <%= link_to "集まれ漫画の里!!", root_path, class:"header-title navbar-brand text-white"%>
        <% end %>
      </div>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

        <!--管理者がログインしていた場合-->
        <% if admin_signed_in? %>
          <li>
            <%= link_to admin_books_path, class: 'nav-link text-white border rounded mr-2 bg-success' do %>
            <i class="fas fa-book-open"></i>マンガ
            <% end %>
          </li>
          <li>
            <%=  link_to admin_users_path, class: 'nav-link text-white border rounded mx-2 bg-success' do %>
            <i class="fas fa-users"></i>ユーザー
            <% end %>
          </li>
          <li>
            <%=  link_to admin_genres_path, class: 'nav-link text-white border rounded mx-2 bg-success' do %>
            <i class="fas fa-list-ul"></i>ジャンル
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-white border rounded ml-2 bg-success' do %>
            <i class="fas fa-sign-out-alt"></i>ログアウト
            <% end %>
          </li>

        <!--顧客側がログインした場合-->
        <% elsif user_signed_in? %>
           <li>
            <%=  link_to new_public_book_path, class: 'nav-link text-white border rounded mx-2 bg-success' do %>
            <i class="fas fa-edit"></i>投稿する
            <% end %>
          </li>
          <li>
            <%= link_to public_user_path(current_user), class: 'nav-link text-white border rounded mr-2 bg-success' do %>
            <i class="fas fa-user"></i>マイページ
            <% end %>
          </li>
          <li>
            <%=  link_to public_books_path, class: 'nav-link text-white border rounded mx-2 bg-success' do %>
            <i class="fas fa-book-open"></i>マンガ
            <% end %>
          </li>
          <li>
            <%=  link_to public_users_path, class: 'nav-link text-white border rounded mx-2 bg-success' do %>
            <i class="fas fa-users"></i>ユーザー
            <% end %>
          </li>
          <li>
            <%= link_to  destroy_user_session_path, method: :delete, class: 'nav-link text-white border rounded ml-2 bg-success' do %>
            <i class="fas fa-sign-out-alt"></i>ログアウト
            <% end %>
          </li>

        <!--ログインしていない場合-->
        <% else %>
          <li>
            <%= link_to about_path, class: 'nav-link text-white border rounded mr-2 bg-success' do %>
            <i class="fas fa-link"></i>About
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path,class: 'nav-link text-white border rounded mx-2 bg-success' do %>
            <i class="fas fa-user-plus"></i>新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path ,class: 'nav-link text-white border rounded ml-2 bg-success' do %>
            <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>